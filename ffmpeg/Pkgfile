# Description: Complete solution to record, convert and stream audio and video.
# URL: http://ffmpeg.org/
# Maintainer: smailv71 at gmail dot com 
# Depends on: gnutls lame libass libbluray libgmp libmodplug libsdl libtheora libva libvpx libxvid opencore-amr openjpeg2 opus rtmpdump speex x264 x265 libvidstab libsixel libsdl2

name=ffmpeg
version=4.2.2
release=1
source=(http://ffmpeg.org/releases/$name-$version.tar.bz2 sixel.patch)

build() {
	cd $name-$version
  patch -Np1 < ../sixel.patch
  export PKG_CONFIG_PATH=/opt/lib/pkgconfig:/opt/lib64/pkgconfig
	./configure \
		--prefix=/usr \
		--disable-debug \
		--disable-doc \
		--enable-avfilter \
		--enable-avresample \
		--enable-fontconfig \
		--enable-gnutls \
		--enable-gpl \
		--enable-libass \
		--enable-libbluray \
		--enable-libfreetype \
		--enable-libmodplug \
		--enable-libmp3lame \
		--enable-libopencore_amrnb \
		--enable-libopencore_amrwb \
		--enable-libopenjpeg \
		--enable-libopus \
		--enable-librtmp \
		--enable-libspeex \
		--enable-libtheora \
		--enable-libvorbis \
		--enable-libx264 \
		--enable-libx265 \
		--enable-libvpx \
		--enable-libxvid \
		--enable-pic \
		--enable-postproc \
		--enable-pthreads \
		--enable-shared \
		--enable-swresample \
		--enable-vaapi \
		--enable-vdpau \
		--enable-version3 \
		--enable-libvidstab \
		--enable-libsixel

	[ "$CC" ] || CC=gcc
	make CC="$CC" SHARED_PP='yes' $MAKEFLAGS
	make DESTDIR=$PKG install install-man
}
